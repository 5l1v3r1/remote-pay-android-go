<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingTop="3dp"
              android:paddingBottom="3dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="@dimen/order_table_text_size" android:id="@+id/PaymentsRowStatusColumn" android:layout_weight="2"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="@dimen/order_table_text_size" android:id="@+id/PaymentsRowAmountColumn" android:layout_weight="2"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="@dimen/order_table_text_size" android:id="@+id/PaymentsRowTipColumn" android:layout_weight="2"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="@dimen/order_table_text_size" android:id="@+id/PaymentsRowTotalColumn" android:layout_weight="2"/>
</LinearLayout>