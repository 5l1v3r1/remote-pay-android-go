<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add Card" android:onClick="captureCardClick"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Cards" android:layout_weight="0"
              android:background="@color/clover_green" android:textSize="@dimen/order_table_text_size"/>
    <ListView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/CardsListView"></ListView>
</LinearLayout>