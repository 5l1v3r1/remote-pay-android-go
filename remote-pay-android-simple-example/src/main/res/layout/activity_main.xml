<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.clover.remotepayandroidsimpleexample.MainActivity">

  <TextView
    android:id="@+id/connector_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20sp"
    android:padding="10sp"
    android:text="@string/disconnected"/>

  <Button
    android:id="@+id/show_message_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:onClick="showMessage"
    android:text="@string/show_message"/>

  <Button
    android:id="@+id/make_sale_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:onClick="makeSale"
    android:text="@string/make_sale"/>

  <Button
    android:id="@+id/make_refund_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:onClick="makeRefund"
    android:text="@string/make_refund"/>

  <Button
    android:id="@+id/test_printing_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:onClick="testPrinting"
    android:text="TEST NEW PRINTING"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:onClick="sendDeviceLogs"
    android:text="Send Device Logs"/>
</LinearLayout>